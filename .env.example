# Xero OAuth Configuration
# Get these from https://developer.xero.com/myapps after creating your app
XERO_CLIENT_ID=your_xero_client_id_here
XERO_CLIENT_SECRET=your_xero_client_secret_here

# NextAuth Configuration
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Database Configuration
# For PostgreSQL: postgresql://user:password@localhost:5432/invoicenow
# For SQLite: file:./dev.db
DATABASE_URL=file:./dev.db

# Optional: Peppol Directory API (if authentication required)
PEPPOL_API_KEY=

# Optional: Logging and Monitoring
LOG_LEVEL=info

# Optional: Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000